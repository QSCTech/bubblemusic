		</mx:State>
	</mx:states>
		
	<mx:LinkButton id="shareClose" label="X" styleName="closeLBtn" x="372" toolTip="关闭" click="close()"
		borderColor="#FFFFFF" alpha="0.0" fillAlphas="[0.0, 0.0, 0.0, 0.0]" />
	<mx:VBox width="360" verticalGap="0" horizontalAlign="right" horizontalCenter="0" horizontalScrollPolicy="off" verticalScrollPolicy="off">
		<mx:Spacer height="12"/>
		<mx:HBox>
			<mx:Text text="播放列表DIY" styleName="topText"/>
			<mx:Spacer width="85"/>
			<mx:LinkButton label="我的播放列表" fontSize="12" styleName="littleLBtn"/>
			<mx:LinkButton label="新建播放列表" fontSize="12" styleName="littleLBtn"/>
		</mx:HBox>
		<mx:HRule width="100%"/>
		<mx:VBox id="allBox" width="100%" horizontalAlign="center">
			<mx:Spacer height="6"/>
			<mx:HBox id="hBox1">
				<mx:LinkButton id="l1" visible="false"/>
				<mx:LinkButton id="l2" visible="false"/>
				<mx:LinkButton id="l3" visible="false"/>
				<mx:LinkButton id="l4" visible="false"/>
				<mx:LinkButton id="l5" visible="false"/>
			</mx:HBox>
			<mx:HBox id="hBox2">
				<mx:LinkButton id="l6" visible="false"/>
				<mx:LinkButton id="l7" visible="false"/>
				<mx:LinkButton id="l8" visible="false"/>
				<mx:LinkButton id="l9" visible="false"/>
				<mx:LinkButton id="l10" visible="false"/>
			</mx:HBox>
		</mx:VBox>
		<mx:Spacer height="12"/>
	</mx:VBox>
	
	
	
	
	
	
	
