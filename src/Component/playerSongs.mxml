<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="260" height="20" styleName="player1"
	rollOver="currentState='cursorSong'" rollOut="currentState=''">
	<mx:Script>
		<![CDATA[
			[Bindable]
			public var text:String = "Bubble";
			//index变量,用来储存在列表中的位置,用来实现双击播放功能
			public var index:int = 0;
		]]>
	</mx:Script>
	<mx:states>
		<mx:State name="cursorSong">
			<mx:SetStyle target="{song.text}" name="color" value="#BAF75D"/>
			<mx:SetStyle name="backgroundColor" value="#625463"/>
			<mx:AddChild position="lastChild">
				<mx:Image styleName="playerImage" verticalCenter="0" left="6" width="9" height="9"/>
			</mx:AddChild>
			<mx:AddChild position="lastChild">
				<mx:Button x="208" label="播放" styleName="buttomLight" width="11" height="11" verticalCenter="0" click="doubleClickListItem(event)"/>
			</mx:AddChild>
			<mx:AddChild position="lastChild">
				<mx:Button x="223" label="收藏" styleName="buttomLight" width="11" height="11" verticalCenter="0"/>
			</mx:AddChild>
			<mx:AddChild position="lastChild">
				<mx:Button x="238" label="删除" styleName="buttomLight" width="11" height="11" verticalCenter="0"/>
			</mx:AddChild>

			<mx:SetProperty name="height" value="20"/>
			<mx:SetProperty target="{label1}" name="y"/>
			<mx:SetStyle target="{label1}" name="verticalCenter" value="0"/>
		</mx:State>
	</mx:states>
	<mx:Label x="19" text="{song.text}" color="#AFA2B0" id="label1" fontSize="12" verticalCenter="0"/>
	
</mx:Canvas>
