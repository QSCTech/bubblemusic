<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="400" styleName="mainCanvas" xmlns:Component="Component.*" verticalScrollPolicy="off" horizontalScrollPolicy="off">
	
	<mx:Script source="../as3/diyList/diyList.as" />
	<mx:states>
		<mx:State name="unlogined">
			<mx:AddChild relativeTo="{hBox1}">
				<mx:Text text="嗨，快注册登录Bubble吧~ 可以保存您的DIY播放列表呦~"/>
			</mx:AddChild>
			<mx:AddChild relativeTo="{hBox2}">
	 	 	 	 <mx:Button label="注册" id="regBtn" click="registerNew()" styleName="normalBtn"/>
	 		</mx:AddChild>
	 		<mx:AddChild relativeTo="{regBtn}" position="after" >
	 	 	 	 <mx:Button label="登录" id="logBtn" click="loginNew()" styleName="normalBtn"/>
